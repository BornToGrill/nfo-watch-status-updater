<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.nfo-watch-status-updater" name="NFO Watched updater" version="1.0.0" provider-name="Daniel Molenaar">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="xbmc.addon"  version="14.0.0"/>
    </requires>
    <extension point="xbmc.service" library="main.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Whenever a movie/tv-show is marked as watched this addon will update the appropriate NFO file to reflect this change.</summary>
        <description lang="en_GB"></description>
        <language></language>
        <platform>all</platform>
        <license>MIT</license>
        <forum></forum>
        <website>http://daniel-molenaar.com</website>
        <email></email>
        <source></source>
        <news></news>
        <disclaimer></disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
